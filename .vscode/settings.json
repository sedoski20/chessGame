{
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "googletest.failed",
                "settings": {
                    "foreground": "#f00"
                }
            },
            {
                "scope": "googletest.passed",
                "settings": {
                    "foreground": "#0f0"
                }
            },
            {
                "scope": "googletest.run",
                "settings": {
                    "foreground": "#0f0"
                }
            }
        ]
    },
    "testExplorer.useNativeTesting": false,
    "catch2TestExplorer.executables": [
        {
            "name": "${filename} (${relDirpath})",
            "pattern": "{build,Build,BUILD,out,Out,OUT}/**/*{test,Test,TEST,tst}*",
            "cwd": "${absDirpath}",
            "env": {
                "C2TESTEXECUTABLEPATH": "${absPath}"
            }
        }
    ],
}